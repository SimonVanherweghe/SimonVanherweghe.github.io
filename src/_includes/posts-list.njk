<ul class="post-list">
  {% for post in postslist | reverse %}
    <li class="post-list__item">
      <a class="post-list__link" href="{{ post.url }}">

        {% renderTemplate "webc",
        post %}
        <img  class="post-list__img" webc:is="eleventy-image" :width="[300, 500, 750, 1000 ]" sizes="33vw" :src="{{ './src' + data.preview}}" :alt="{{ (data.alt || data.title)}}">
        {% endrenderTemplate %}

        <ul class="post-list__tags">
          {% for tag in post.data.tags | pageTags %}
            <li>{{ tag }}</li>
          {% endfor %}
        </ul>

        <h3 class="post-list__title">{{ post.data.title }}</h3>

        <p class="post-list__excerpt">{{ post.data.description | safe  }}</p>

        <div class="post-list__meta">
          <time datetime="{{ post.date | htmlDateString }}">
            {{ post.date | readableDate }}
          </time>
        </div>

      </a>
    </li>
  {% endfor %}
</ul>