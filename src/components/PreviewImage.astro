---
import { Image } from "astro:assets";

const { alt, className = "", image } = Astro.props;
---

<Image
  src={image}
  sizes={"auto"}
  inferSize
  alt={alt}
  class={className}
  format="avif"
/>

<style>
  img {
    aspect-ratio: 16/8;
    object-fit: cover;
    margin-bottom: var(--space-xs);
    grid-area: img;
  }
</style>
